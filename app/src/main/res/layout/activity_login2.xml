<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bros.freetime2.Login2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/facebookButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_below="@+id/emailLogin"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:scrollbarSize="100dp"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/passwordLogin"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you new?please Register"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />

        <EditText
            android:id="@+id/emailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/textLogin"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_below="@+id/emailRegister"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/conPassRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:layout_below="@+id/passwordRegister"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:text="Register"
            android:layout_below="@+id/conPassRegister"
            android:layout_alignParentStart="true" />


        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/facebookButton"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="16dp" />-->

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
