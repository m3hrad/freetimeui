<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bros.freetime.AddEventFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/addEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/add_event_name_hint"/>
        <EditText
            android:id="@+id/addEventStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@id/addEventName"
            android:hint="@string/add_event_start_date_hint"/>
        <EditText
            android:id="@+id/addEventStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addEventStartDate"
            android:ems="10"
            android:inputType="time"
            android:hint="@string/add_event_start_time_hint"/>
        <EditText
            android:id="@+id/addEventEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@id/addEventStartTime"
            android:hint="@string/add_event_end_date_hint"/>
        <EditText
            android:id="@+id/addEventEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addEventEndDate"
            android:ems="10"
            android:inputType="time"
            android:hint="@string/add_event_end_time_hint"/>
        <Button
            android:id="@+id/addEventSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_below="@id/addEventEndTime"
            />
    </RelativeLayout>
</FrameLayout>
